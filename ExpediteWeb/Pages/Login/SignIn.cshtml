@page
@model ExpediteWeb.Pages.Login.LoginModel
@{
    ViewData["Title"] = "Login";
}


<div class="text-center">
    <h3 class="display-4"><b>Alchemative</b></h3>
    <br>
</div>

<form method="post" action="">
    <div class="box">
        <h3>Sign In</h3><br>

        <input type="email" name="email" value="" placeholder="Email or Phone"  class="email" />
        <br>
        <input type="password" name="Password" value="" placeholder="Password"  class="email" />
        <br>
        <a asp-page="SignInConfirmation"><div class="btn">Continue</div></a> <!-- End Btn -->
        <br>
        <a style="font-size: 0.8em; margin: 10px; padding: 8px; color:#35b3a2" asp-page="ForgotPassword">Forgot Password?</a><br>

        <p style="margin: 10px; padding: 8px;">Don't Have An Account <a style="color:#35b3a2" asp-page="SignUp">Sign Up</a> Now</p>

    </div> <!-- End Box -->

</form>